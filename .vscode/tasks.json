{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build AdventOfCode",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "${workspaceFolder}/build/*"
            ],
            "group": {
                "kind": "clean",
                "isDefault": true
            }
        }
    ]
}