{
    "cmake.configureOnOpen": true, // Configura automáticamente el proyecto al abrir
    "cmake.buildDirectory": "${workspaceFolder}/build",
    "cmake.generator": "Ninja", // Más rápido que "Unix Makefiles"
    "files.associations": {
        "*.cpp": "cpp",
        "*.h": "cpp",
        "chrono": "cpp",
        "iostream": "cpp",
        "*.in": "cpp",
        "deque": "cpp"
    },
    "editor.formatOnSave": true, // Opcional: formatea el código automáticamente al guardar
    "cmake.buildBeforeRun": true, // Opcional: compila automáticamente antes de ejecutar
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools" // Proporciona la configuración de IntelliSense para C/C++
}